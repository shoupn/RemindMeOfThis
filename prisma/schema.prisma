generator client {
  provider = "prisma-client-js"
}

datasource db {   
  provider = "mongodb"   
  url = env("DATABASE_URL") 
}

model AppActivity {
  id         String @id @default(auto()) @map("_id") @db.ObjectId  
  processId  String @map("process_id")
  startTime  DateTime  @default(now()) @map("start_time")
  stopTime   DateTime? @default(now()) @map("stop_time")
}

model EventReminders {
  id                    String @id @default(auto()) @map("_id") @db.ObjectId  
  eventId               String @map("event_id")
  eventInitialResponse  DateTime?  @default(now()) @map("event_initial_response")
  eventJson             Json? @map("event_json")
  replyJson             Json? @map("reply_json")
  eventReminderTime     DateTime? @default(now()) @map("event_reminder_time")
  reminded              Boolean @default(false) @map("reminded")
  remindedTime          DateTime? @default(now()) @map("reminded_time")
  remindedJson          Json? @map("reminded_json")
}